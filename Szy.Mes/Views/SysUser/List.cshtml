@{
    ViewData["Title"] = "用户列表";
    Layout = null; // 作为页签内容，不使用布局
}

<div class="user-list-container">
    <h3>用户列表</h3>
    <table class="user-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>用户名</th>
                <th>真实姓名</th>
                <th>创建时间</th>
            </tr>
        </thead>
        <tbody id="userTableBody">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.RealName</td>
                    <td>@user.CreateTime.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>